# API Dashboard Service Environment Variables

# Server Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Kubernetes Configuration
KUBERNETES_NAMESPACE=default
KUBERNETES_SERVICE_ACCOUNT_PATH=/var/run/secrets/kubernetes.io/serviceaccount

# Service Discovery
SERVICE_DISCOVERY_ENABLED=true
SERVICES_TO_MONITOR=aggregation-service,alert-service,alert-history-service,location-service,realtime-service,thresholds-service

# Dashboard Configuration
DASHBOARD_TITLE=API Monitoring Dashboard
DASHBOARD_REFRESH_INTERVAL=30
FLET_SERVER_PORT=8080
FLET_WEB=true

# Monitoring Settings
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_INTERVAL=60
METRICS_COLLECTION_INTERVAL=30

# Database (Optional - for storing metrics history)
# DATABASE_URL=postgresql://user:pass@localhost/api_dashboard

# Authentication (Optional)
# JWT_SECRET_KEY=your-secret-key-here
# JWT_ALGORITHM=HS256
# JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30